<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CLopezConsumirWebServiceRest.InsertPost"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Insertar Datos en Xamarin.Forms!" HorizontalTextAlignment="Center"
                />
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el codigo"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la edad"/>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Row="0" Grid.Column="0" x:Name="btnInsertar"
                    Text="Insertar"
                    Clicked="btnInsertar_Clicked"/>

                <Button Grid.Row="0" Grid.Column="1" x:Name="btnRegresar"
                        Text="Regresar"
                        Clicked="btnRegresar_Clicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>